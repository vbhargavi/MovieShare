<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/horizontal_item_width"
    android:layout_height="@dimen/horizontal_item_height"
    android:background="?android:attr/selectableItemBackground"
    android:padding="2dp"
    android:orientation="vertical">

    <ImageView
        android:layout_width="@dimen/horizontal_image_width"
        android:layout_height="@dimen/horizontal_image_height"
        android:scaleType="centerCrop"
        android:id="@+id/image"
        android:src="@mipmap/ic_launcher"/>

    <TextView
        android:id="@+id/cast_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:textSize="14sp"
        android:lines="2"
        android:maxLines="2"
        android:ellipsize="end"
        android:textColor="@color/black"
        android:text="Bradley Cooper Liamy"/>

</LinearLayout>