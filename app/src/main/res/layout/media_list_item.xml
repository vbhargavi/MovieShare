<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/transparent_item_selector"
    android:orientation="horizontal"
    android:padding="16dp">

    <ImageView
        android:id="@+id/movieImage"
        android:layout_width="70dp"
        android:layout_height="90dp"
        android:src="@mipmap/ic_launcher" />


    <TextView
        android:id="@+id/movie_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/movieImage"
        android:ellipsize="end"
        android:fontFamily="sans-serif-medium"
        android:maxLines="1"
        android:text="Boyhood game of thronesbrea "
        android:textAppearance="?android:attr/textAppearanceMedium" />


    <TextView
        android:id="@+id/movie_genres"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/movie_title"
        android:layout_below="@id/movie_title"
        android:layout_marginTop="3dp"
        android:fontFamily="sans-serif-light"
        android:text="Drama/Action "
        android:textSize="12sp" />

    <TextView
        android:id="@+id/rating_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/movie_genres"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@id/movieImage"
        android:drawableLeft="@drawable/ic_action_grade"
        android:fontFamily="sans-serif-regular"
        android:gravity="center_vertical"
        android:text="6.5/10" />




</RelativeLayout>